<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/teachable_parent_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

    <TextView
        android:id="@+id/teachable_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

    <TextView
        android:id="@+id/teachable_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

    <Button
        android:id="@+id/teachable_child_new_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/topic_new_learning_objective_button"/>

    <ListView
        android:id="@+id/teachable_child_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>