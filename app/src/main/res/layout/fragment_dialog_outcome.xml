<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gold">

    <TextView
        style="@style/InverseTextStyle"
        android:id="@+id/completed_lesson_outcome_positive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textSize="20dp"
        android:textAllCaps="true"
        android:text=""/>

    <TextView
        style="@style/InverseTextStyle"
        android:id="@+id/completed_lesson_outcome_negative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textSize="20dp"
        android:textAllCaps="true"
        android:text=""/>

    <TextView
        style="@style/InverseTextStyle"
        android:id="@+id/completed_lesson_outcome_improvement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textSize="20dp"
        android:textAllCaps="true"
        android:text=""/>

    <Button
        style="@style/InverseButtonStyle"
        android:id="@+id/completed_lesson_done_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:text="Done"/>

</LinearLayout>