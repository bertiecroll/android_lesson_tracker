<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/list_fragment_header_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:paddingBottom="16dp"
        android:elevation="8dp"

        android:background="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/take_lesson_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textSize="20dp"
        android:textColor="@android:color/background_light"
        android:textAllCaps="true"
        android:text=""/>

    <TextView
        android:id="@+id/take_lesson_topic_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/take_lesson_details"
        android:textSize="16dp"
        android:textColor="@android:color/background_light"
        android:textAllCaps="true"
        android:text=""/>

    </RelativeLayout>

    <ListView
        android:id="@+id/take_lesson_learning_objectives"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/take_lesson_notes_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>

    <Button
        android:id="@+id/take_lesson_complete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:elevation="8dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/background_light"
        android:padding="4dp"
        android:text="@string/take_lesson_complete_button"/>


</LinearLayout>