<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/take_lesson_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""/>

    <TextView
        android:id="@+id/take_lesson_topic_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""/>

    <ListView
        android:id="@+id/take_lesson_learning_objectives"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/take_lesson_notes_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/take_lesson_complete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/take_lesson_complete_button"/>


</LinearLayout>